<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paymentCard" >

    <ImageView
        android:id="@+id/ivCardShape"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/cards_shape" />

    <TextView
        android:id="@+id/tvCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivCardShape"
        android:layout_alignTop="@+id/ivCardShape"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/card_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCardBalanceLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCardType"
        android:layout_below="@+id/tvCardType"
        android:layout_marginTop="20dp"
        android:text="@string/card_balance"
        android:textColor="@color/card_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvCardBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivCardShape"
        android:layout_alignStart="@+id/tvCardBalanceLable"
        android:layout_alignTop="@+id/tvCardBalanceLable"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="115dp"
        android:textColor="@color/card_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvCardCreditLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCardBalanceLable"
        android:layout_below="@+id/tvCardBalanceLable"
        android:layout_marginTop="10dp"
        android:text="@string/card_credit"
        android:textColor="@color/card_text"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvCardCreditValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivCardShape"
        android:layout_alignStart="@+id/tvCardBalanceValue"
        android:layout_alignTop="@+id/tvCardCreditLable"
        android:layout_marginEnd="15dp"
        android:textColor="@color/card_text"
        android:textSize="15sp" 
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/ibInfo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/ivCardShape"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/ivCardShape"
        android:layout_marginBottom="30dp"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivCardShape"
        android:layout_alignStart="@+id/tvCardBalanceLable"
        android:layout_marginBottom="10dp"
        android:textColor="@color/card_number"
        android:textSize="15sp" />

</RelativeLayout>